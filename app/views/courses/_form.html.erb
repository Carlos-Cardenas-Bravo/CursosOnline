<%= form_with(model: course, local: true, class: "box") do |form| %>
  <% if course.errors.any? %>
    <div class="notification is-danger">
      <h2><%= pluralize(course.errors.count, "error") %> prohibió que este curso se guardara:</h2>
      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, class: "label" %>
    <div class="control">
      <%= form.text_field :title, class: "input", placeholder: "Ingresa el título del curso" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :description, class: "label" %>
    <div class="control">
      <%= form.text_area :description, class: "textarea", placeholder: "Describe el curso" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :duration, class: "label" %>
    <div class="control">
      <%= form.number_field :duration, class: "input", placeholder: "Duración en horas" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :instructor_id, class: "label" %>
    <div class="control">
      <%= form.select :instructor_id, User.where(role: :instructor).map { |u| [u.nombre, u.id] }, { prompt: "Selecciona un instructor" }, class: "select" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= form.submit "Guardar Curso", class: "button is-primary" %>
    </div>
  </div>
<% end %>
