<section class="section">
  <div class="container">
    <h2 class="title is-3">Registrate</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'box' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: "label" %>
        <div class="control">
          <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :contraseña, class: "label" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
        <% end %>
        <div class="control">
          <%= f.password_field :password, class: "input", autocomplete: "new-password" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :confirma_tu_contraseña, class: "label" %>
        <div class="control">
          <%= f.password_field :password_confirmation, class: "input", autocomplete: "new-password" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :nombre, class: "label" %>
        <div class="control">
          <%= f.text_field :nombre, class: "input" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :apellido, class: "label" %>
        <div class="control">
          <%= f.text_field :apellido, class: "input" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :edad, class: "label" %>
        <div class="control">
          <%= f.number_field :edad, class: "input" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :sexo, class: "label" %>
        <div class="control">
          <%= f.select :sexo, ['Hombre', 'Mujer'], {}, { class: "select" } %>
        </div>
      </div>

      <div class="field">
        <%= f.label :profile_image, "Sube tu imagen de perfil", class: "label" %>
        <div class="control">
          <div class="file has-name is-fullwidth">
            <label class="file-label">
              <%= f.file_field :profile_image, class: "file-input", onchange: "document.getElementById('file-name').textContent = this.files[0].name" %>
              <span class="file-cta">
                <span class="file-icon">
                  <i class="fas fa-upload"></i>
                </span>
                <span class="file-label">
                  Escoge un archivo…
                </span>
              </span>
              <span id="file-name" class="file-name">
                Ningún archivo seleccionado
              </span>
            </label>
          </div>
        </div>
      </div>

      <div class="field">
        <%= f.label :receive_updates, "¿Deseas recibir actualizaciones?", class: "label" %>
        <div class="control">
          <label class="checkbox">
            <%= f.check_box :receive_updates %> Sí, deseo recibir actualizaciones
          </label>
        </div>
      </div>

      <div class="field is-grouped">
        <div class="control">
          <%= f.submit "Registrarse", class: "button is-primary" %>
        </div>
      </div>
    <% end %>

  </div>
</section>



